<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DC Superheroes</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container-fluid">
            <!-- DC Logo & Title -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/dc-logo.png" alt="DC Logo" class="dc-logo">
                DC Superheroes
            </a>

            <!-- Right-aligned DC Games Link -->
            <div class="ms-auto">
                <a class="nav-link text-white games-link" href="https://www.dc.com/games" target="_blank">
                    <img src="/images/dc-logo.png" alt="DC Logo" class="dc-logo-small">
                    Games
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody() 
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


